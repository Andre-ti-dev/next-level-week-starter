{% extends "layout.njk" %}
{% set pageId = "page-search-results" %}

{% block title %}
  <title>Busca de pontos de coleta</title>
{% endblock title %}

{% block styles %}
  <link rel="stylesheet" href="/styles/search-results.css"/>
{% endblock styles %}

{% block content %}
  {% include "partials/page-header.njk" %}

  <main>
    {% if total > 0 %}
      <h4>
        <strong>{{ total }} pontos</strong> encontrados
      </h4>
      <div class="cards">

        {% for point in points %}
          <div class="card">
            <img src="{{ point.image }}" alt="{{ point.name}}">
            <h1>{{ point.name}}</h1>
            <h3>{{ point.items }}</h3>
            <p>
              {{ point.city }},
              {{ point.state }}
              <br/>
              {{ point.address }}
              <br/>
              {{ point.address2 }}
            </p>
          </div>
        {% endfor %}

      </div>
      {% else %}
      <h4>
        <strong>Nenhum</strong> ponto encontrado
      </h4>
    {% endif %}
  </main>
{% endblock content %}